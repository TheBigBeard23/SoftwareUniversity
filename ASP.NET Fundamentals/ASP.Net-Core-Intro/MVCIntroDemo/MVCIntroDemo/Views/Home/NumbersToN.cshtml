@{
    if (ViewBag.Count > 0)
    {
        ViewBag.Title = "Nums 1 ... " + ViewBag.Count;
    }
    else
    {
        ViewBag.Title = "Nums 1 ... N";
    }
}

@if (ViewBag.Count > 0)
{
    <h2>@ViewBag.Title</h2>

    <ul>
        @for (int i = 1; i <= ViewBag.Count; i++)
        {
            <li>@i</li>
        }
    </ul>

}
else
{
    <h2>@ViewBag.Title</h2>
}

<form asp-controller="Home" asp-action="NumbersToN">
    <div class="row">
        <div class="col-2">
            <input class="form-control" type="number" min="0" step="1" name="count" />
        </div>
        <div class="col-2">
            <button class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>